<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste des Animaux"
        android:gravity="center"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title">

        <RadioButton
            android:id="@+id/affichageLineaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lineaire"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/affichageGrille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grille" />
    </RadioGroup>

    <!-- âœ… Selected animals list at top -->
    <TextView
        android:id="@+id/selectedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animaux choisis :"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/checked"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/selectedTitle"
        android:padding="4dp"/>

    <!-- Main animal list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/checked"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
